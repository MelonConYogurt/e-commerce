{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 120,
      "minLength": 1
    },
    "price": {
      "type": "biginteger",
      "required": true,
      "min": "0"
    },
    "stock": {
      "type": "biginteger",
      "required": true,
      "min": "0"
    },
    "introduction": {
      "type": "string",
      "required": true,
      "maxLength": 250
    },
    "description": {
      "type": "text",
      "required": true
    },
    "colors": {
      "type": "json"
    },
    "media": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": true,
      "required": true
    }
  }
}
